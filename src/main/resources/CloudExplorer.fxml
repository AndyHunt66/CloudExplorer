<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.alfresco.support.Cloud.Controller">

      <Button onAction="#logon" text="Button" GridPane.columnIndex="1" GridPane.rowIndex="2" />
 <!-- <Label fx:id="logon" text="Login" GridPane.columnIndex="1" GridPane.rowIndex="2" /> -->
   <MenuBar GridPane.columnIndex="1" GridPane.rowIndex="1">
     <menus>
       <Menu mnemonicParsing="false" text="File">
         <items>
             <MenuItem onAction="#logon" text="Login" />
             <MenuItem onAction="#exit" text="Close" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Help">
         <items>
           <MenuItem text="About" />
         </items>
       </Menu>
     </menus>
   </MenuBar>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
